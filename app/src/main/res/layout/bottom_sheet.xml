<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5C5C5C"
    android:orientation="horizontal"

    app:behavior_hideable="true"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이날의 상태"
            android:textSize="20sp"
            android:textColor="#FFF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:background="#4A4A4A"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/feeling_bad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@drawable/feeling_bad"
                android:scaleType="fitCenter"
                android:contentDescription="@string/feeling_bad"
                />
            <ImageButton
                android:id="@+id/feeling_sad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@drawable/feeling_sad"
                android:scaleType="fitCenter"
                android:contentDescription="@string/feeling_sad"
                />
            <ImageButton
                android:id="@+id/feeling_normal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@drawable/feeling_normal"
                android:scaleType="fitCenter"
                android:contentDescription="@string/feeling_normal" />
            <ImageButton
                android:id="@+id/feeling_good"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@drawable/feeling_good"
                android:scaleType="fitCenter"
                android:contentDescription="@string/feeling_good" />
            <ImageButton
                android:id="@+id/feeling_nice"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@drawable/feeling_nice"
                android:scaleType="fitCenter"
                android:contentDescription="@string/feeling_nice" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>