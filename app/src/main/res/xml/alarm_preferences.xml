<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="alarm_manual"
        android:title="면담 일정 알림 활성화"
        android:summaryOn="지정된 면담 일정이 되면 알림을 받습니다."
        android:summaryOff="알림을 받지 않습니다."
        android:defaultValue="false"
        />
    <Preference
        android:title="날짜 설정"
        android:summary="현재 설정되어 있지 않음"
        android:key="manual_alarm_date"
        android:dependency="alarm_manual" />
</PreferenceScreen>